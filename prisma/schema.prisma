generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Child {
  id          String   @id @default(uuid())
  name        String
  age         Int
  daysPresent String[]
  createdAt   DateTime @default(now())
}

model User {
  id        String   @id @default(uuid())
  name      String?
  email     String   @unique
  password  String // Stocke le mot de passe hach√© avec bcrypt
  role      Role     @default(USER)
  createdAt DateTime @default(now())
}

enum Role {
  USER
  ADMIN
}
